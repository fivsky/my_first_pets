<b>Converter miles to km</b>

miles = 500
kilometers = miles * 1.609344
print(kilometers)

// 2 Database

user_added = True
user = "Becca"

if user_added == False:
  print(f"Add {user} to database")
  user_added = True
print(f"Database has user: {user}")

// 3 Collecting data points 

minimum_points = 100
data_points = 150

if data_points >= minimum_points:
  print("There are enough data points!")
if data_points < minimum_points:
  print("Keep collecting data.")

// 4 Light switch

is_day = False
lights_on = not is_day
  
print("Daytime?")
print(is_day)

print("Lights on?")
print(lights_on)

// 5 Pulse rate analizer

